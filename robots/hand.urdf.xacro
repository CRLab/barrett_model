<robot name="bhand"
  xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find barrett_model)/models/hand_top.urdf.xacro"/>

  <!-- Root link is in the world frame-->
  <link name="camera_link"/>

  <!-- BHand -->
  <xacro:bhand prefix="bhand" parent_link="camera_link" xyz="0.0 0.0 1" rpy="0 0 0"/>
</robot>
